<h1>{{categorias.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <small>{{conteudo}}</small> <br>
        <a href="/postagem/{{slug}}"> <button class="btn btn-success mt-3">Leia mais</button> </a>
        <hr>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>

{{else}}
<h5>Não há postagem</h5>
{{/each}}