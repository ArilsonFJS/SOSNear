<h2>Lista de categorias</h2>
<hr>

<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button> </a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small> <br> 
        <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success mt-3">Editar</button></a>
        <form action="/admin/categorias/deletar/{{_id}}" method="POST">
            <input type="hidden" nome="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma categoria cadastrada!</h4>
{{/each}}