<h2>Lista de postagens</h2>
<hr>

<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button> </a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>{{categoria.nome}}</small>
        <small>{{data}}</small> <br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
        <form action="/admin/postagens/deletar/{{_id}}" method="POST">
            <input type="hidden" nome="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>
{{else}}
<p>Nenhuma postagem registrada!</p>
{{/each}}